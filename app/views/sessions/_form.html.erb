<div class='container' id='login-form-container'>
  <%= form_tag sessions_path, class: "form-horizontal login-form", method: 'POST' do %>
  <div class='form-group login-text text-center'>
    <div class='col-sm-12'>
      <%=  text_field_tag :login, nil, class: 'login-bar login-border', placeholder: 'Username/Email' %>
    </div>
    <div class='col-sm-12'>
      <%=  password_field_tag :password, nil, class: 'login-bar login-border', placeholder: 'Password'%>
    </div>
  </div>
  <div class='form-group'>
    <div class='col-sm-12 text-center submit-buttons'>
      <%=  submit_tag 'Sign In', class:'btn btn-default signin-button login-bar' %>
      <%= button_to 'Sign Up', new_player_path, class:'btn btn-default signup-button login-bar', method: 'GET' %>
      <% end %>
    </div>
  </div>
</div>