<div id="rules-div">
  <button type="button" id="rules-button" class="btn btn-primary btn-md btn-block">Rules</button>
</div>
<p></p>
<div id="rules-text">
  <div class="col-xs-12" id="game"><p>Game: <span class="games-rules"><%= @pool.name %></span></p></div>
  <div class="col-xs-12" id="picks"><p>Number of picks: <span class="games-rules"><%= @pool.number_of_teams %></span></p></div>
  <div class="col-xs-12" id="description"><p>Rules: <span class="games-rules"><%= @pool.description %></span></p></div>
</div>
<div id='pool-submit'>
  <div class='form-group'>
    <div class='col-sm-12 text-center submit-buttons'>
      <%= button_to 'Submit Picks', new_player_path, class:'btn btn-default btn-lg pool-submit-button', method: 'POST' %>
    </div>
  </div>
</div>
